import torchvision.transforms.functional as F
import numpy as np
import skimage


class Normalize:

    def __init__(self, mean=128, std=128):
        self.mean = mean
        self.std = std

    def __call__(self, image):
        img = skimage.img_as_float(np.array(image))
        image = (img * 256 - self.mean) / self.std
        return image
